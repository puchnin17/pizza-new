#include <iostream>
#include <fstream>

using namespace std;

class Pizza {
public:
    int id;
    double rating;
    string name;
    Pizza(int id, double rating, string name) {

        this->id = id;
        this->rating = rating;
        this->name = name;


    }

};
class menu {
public:
    int id;
    int pizz_id;
    string pizza_name;
    double price;
    menu(int id, int pizz_id, string pizza_name, double price) {

        this->id = id;
        this->pizz_id = pizz_id;
        this->pizza_name = pizza_name;
        this->price = price;
    }
};

class person {
public:
    int id;
    string firstname;
    string lastname;
    bool gender;
    person(int id, string firstname, string lastname, bool gender) {

        this->id = id;
        this->firstname = firstname;
        this->lastname = lastname;
        this->gender = gender;
    }

};

class person_visit {
public:
    int id;
    int person_id;
    int pizz_id;
    string date;
    person_visit(int id, int person_id, int pizz_id, string date) {

        this->id = id;
        this->person_id = person_id;
        this->pizz_id = pizz_id;
        this->date = date;


    }
};

class person_order {
public:
    int id;
    int person_id;
    int menu_id;
    string order_date;
    person_order(int id, int person_id, int menu_id, string order_date) {

        this->id = id;
        this->person_id = person_id;
        this->menu_id = menu_id;
        this->order_date = order_date;

    }
};

int main() {
    setlocale(LC_ALL, "RUS");
    // Создаем массив объектов Pizza, menu, person, person_visit и person_order
    Pizza* pizzas[4];
    pizzas[0] = new Pizza(1, 3, "Dodo");
    pizzas[1] = new Pizza(2, 4, "Mimo");
    pizzas[2] = new Pizza(3, 5, "lui");
    pizzas[3] = new Pizza(4, 6, "York");

    menu* menus[4];
    menus[0] = new menu(54, 13, "margarita", 20);
    menus[1] = new menu(23, 14, "peperoni", 30);
    menus[2] = new menu(65, 15, "sorok sirov", 40);
    menus[3] = new menu(76, 16, "Ghirobaz", 50);

    person* persons[4];
    persons[0] = new person(12, "Viktor", "Chepka", true);
    persons[1] = new person(19, "Vika", "Choy", true);
    persons[2] = new person(87, "Petr", "Shelk", true);
    persons[3] = new person(51, "Marina", "Shmel", false);

    person_visit* visits[4];
    visits[0] = new person_visit(99, 12, 1, "09.12.22");
    visits[1] = new person_visit(68, 19, 2, "09.11.22");
    visits[2] = new person_visit(79, 87, 3, "09.10.22");
    visits[3] = new person_visit(85, 51, 4, "09.09.22");

    person_order* orders[4];
    orders[0] = new person_order(94, 12, 54, "09.08.22");
    orders[1] = new person_order(24, 19, 23, "09.08.22");
    orders[2] = new person_order(29, 87, 65, "09.07.22");
    orders[3] = new person_order(621, 51, 76, "09.06.22");

    // Пользователь выбирает пиццерию (здесь предполагается, что выбор происходит по индексу)
    int chosenPizzaIndex;
    cout << "Выберите пиццерию (0-3): ";
    cin >> chosenPizzaIndex;

    // Выводим информацию о заказах для выбранной пиццерии
    cout << "Информация о заказах для пиццерии " << pizzas[chosenPizzaIndex]->name << ":" << endl;
    for (int i = 0; i < 4; i++) {
        if (visits[i]->pizz_id == chosenPizzaIndex + 1) {
            cout << "Заказ №" << orders[i]->id << " - " << persons[i]->firstname << " " << persons[i]->lastname;
            cout << " заказал(а) " << menus[i]->pizza_name << " за " << menus[i]->price << " рублей";
            cout << " В " << orders[i]->order_date << endl;
        }
    }


// Novaya


#include <iostream>
#include <map>
#include <vector>

using namespace std;

class Pizza {
public:
    int id;
    double rating;
    string name;
    Pizza(int id, double rating, string name) {
        this->id = id;
        this->rating = rating;
        this->name = name;
    }
};

class Menu {
public:
    int id;
    int pizza_id; // Corrected typo: pizz_id to pizza_id
    string pizza_name;
    double price;
    Menu(int id, int pizza_id, string pizza_name, double price) {
        this->id = id;
        this->pizza_id = pizza_id;
        this->pizza_name = pizza_name;
        this->price = price;
    }
};

class Person {
public:
    int id;
    string firstname;
    string lastname;
    bool gender;
    Person(int id, string firstname, string lastname, bool gender) {
        this->id = id;
        this->firstname = firstname;
        this->lastname = lastname;
        this->gender = gender;
    }
};

class PersonVisit {
public:
    int id;
    int person_id;
    int pizza_id; // Corrected typo: pizz_id to pizza_id
    string date;
    PersonVisit(int id, int person_id, int pizza_id, string date) {
        this->id = id;
        this->person_id = person_id;
        this->pizza_id = pizza_id;
        this->date = date;
    }
};

class PersonOrder {
public:
    int id;
    int person_id;
    int menu_id;
    string order_date;
    PersonOrder(int id, int person_id, int menu_id, string order_date) {
        this->id = id;
        this->person_id = person_id;
        this->menu_id = menu_id;
        this->order_date = order_date;
    }
};

struct OrderDetails {
    string person_name;
    string pizza_name;
    double price;
};

int main() {
    setlocale(LC_ALL, "RUS");

    Pizza* pizzas[4];
    pizzas[0] = new Pizza(1, 3, "Dodo");
    pizzas[1] = new Pizza(2, 4, "Mimo");
    pizzas[2] = new Pizza(3, 5, "lui");
    pizzas[3] = new Pizza(4, 6, "York");

    Menu* menus[4];
    menus[0] = new Menu(54, 1, "margarita", 20);
    menus[1] = new Menu(23, 2, "peperoni", 30);
    menus[2] = new Menu(65, 3, "sorok sirov", 40);
    menus[3] = new Menu(76, 4, "Ghirobaz", 50);

    Person* persons[4];
    persons[0] = new Person(12, "Viktor", "Chepka", true);
    persons[1] = new Person(19, "Vika", "Choy", true);
    persons[2] = new Person(87, "Petr", "Shelk", true);
    persons[3] = new Person(51, "Marina", "Shmel", false);

    PersonVisit* visits[4];
    visits[0] = new PersonVisit(99, 12, 1, "09.12.22");
    visits[1] = new PersonVisit(68, 19, 2, "09.11.22");
    visits[2] = new PersonVisit(79, 87, 3, "09.10.22");
    visits[3] = new PersonVisit(85, 51, 4, "09.09.22");

    PersonOrder* orders[4];
    orders[0] = new PersonOrder(94, 12, 54, "09.08.22");
    orders[1] = new PersonOrder(24, 19, 23, "09.08.22");
    orders[2] = new PersonOrder(29, 87, 65, "09.07.22");
    orders[3] = new PersonOrder(621, 51, 76, "09.06.22");

    map<string, vector<OrderDetails>> ordersByDate;

    for (int i = 0; i < 4; ++i) {
        string orderDate = orders[i]->order_date;

        Person* person = nullptr;
        for (int j = 0; j < 4; ++j) {
            if (persons[j]->id == orders[i]->person_id) {
                person = persons[j];
                break;
            }
        }

        Menu* menu = nullptr;
        for (int j = 0; j < 4; ++j) {
            if (menus[j]->id == orders[i]->menu_id) {
                menu = menus[j];
                break;
            }
        }

        Pizza* pizza = nullptr;
        for (int j = 0; j < 4; ++j) {
            if (pizzas[j]->id == menu->pizza_id) {
                pizza = pizzas[j];
                break;
            }
        }

        if (person && menu && pizza) {
            OrderDetails orderDetails;
            orderDetails.person_name = person->firstname + " " + person->lastname;
            orderDetails.pizza_name = pizza->name;
            orderDetails.price = menu->price;
            orderDetails.pizza_name = menu->pizza_name;

            ordersByDate[orderDate].push_back(orderDetails);
        }
    }

    string chosenDate;
    cout << "Введите дату в формате dd.mm.yy: ";
    cin >> chosenDate;

    if (ordersByDate.find(chosenDate) != ordersByDate.end()) {
        cout << "Информация о заказах на " << chosenDate << ":" << endl;
        double totalAmount = 0.0;
        map<string, double> spendingByPerson;

        for (const auto& order : ordersByDate[chosenDate]) {
            cout << "Покупатель: " << order.person_name << ", Пицццерия: " << order.pizza_name << ", Пицца:" << order.pizza_name << ", Цена: " << order.price << endl;
            totalAmount += order.price;

            spendingByPerson[order.person_name] += order.price;
        }

        cout << "Общая сумма заказов: " << totalAmount << endl;

        string biggestSpender;
        double maxSpending = 0.0;
        for (const auto& person : spendingByPerson) {
            if (person.second > maxSpending) {
                maxSpending = person.second;
                biggestSpender = person.first;
            }
        }

        cout << "Больше всего потратил: " << biggestSpender << " - " << maxSpending << " рублей." << endl;
    } else {
        cout << "На выбранную дату заказов нет." << endl;
    }

    return 0;
}
    

    return 0;
};
